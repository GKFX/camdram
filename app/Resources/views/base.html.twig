<!doctype html>
<html lang="en">
    <head>
        <!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-37770738-2"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());
		
		gtag('config', 'UA-37770738-2');
	</script>
	
	<meta charset="utf-8" />

        {# Block pages from appearing in search engines if dev site #}
        {% if development_warning %}
            <meta name="robots" content="noindex" />
        {% endif %}
        <meta name="keywords" content="camdram,cambridge,theatre,drama,comedy,musicals,shows,society,societies,ACTS,association" />
        <meta name="description" content="Camdram is an information hub for the student performing arts community in Cambridge, England." />

        <meta name="viewport" content="width=device-width,initial-scale=1.0" />
        <link rel="manifest" href="/manifest.json">
        
        {# Opengraph properties for facebook posts #}
        <meta property="og:type" content="website" />
		<meta property="og:locale" content="en_GB" />
		<meta property="og:site_name" content="Camdram" />
		<meta property="fb:app_id" content="{{ facebook_id }}" />
        {% block opengraph %}{% endblock %}
        
        <link rel='icon' href='/favicon.png' type='image/png' />

        <title>{% block title %}{% endblock %} - Camdram</title>

        <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.css" />
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.css" rel="stylesheet"/>
        <link href="{{ asset('build/app.css') }}" rel="stylesheet" />     
        {% block stylesheets %}{% endblock %}

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
        <script src="{{ asset('build/manifest.js') }}"></script>
        <script src="{{ asset('build/vendor.js') }}"></script>
        <script src="{{ asset('build/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
        
    </head>
    <body>
        <div id="wrapper">
            {% if development_warning %}{% include 'dev-warning.html.twig' %}{% endif %}
            {% if show_site_notice %}{% include 'site-notice.html.twig' %}{% endif %}
            {% block main %}{% endblock %}
        </div>

        <footer>
            {% block footer %}{% endblock %}
            <div id="copyright" class="row">
                <p>&copy; Association of Cambridge Theatre Societies and contributing groups 2004 &#8212; {{ "now"|date('Y') }}.
                    Comments &amp; queries to <a href="mailto:support@camdram.net">support@camdram.net</a>
                </p>
            </div>
        </footer>
    </body>
</html>

