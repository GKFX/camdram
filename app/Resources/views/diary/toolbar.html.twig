<div class="diary-nav">
    <div class="split-header">
        <h3>Diary</h3>
        <ul role="navigation">
            <li><a href="diary.ics"><i class="fa fa-calendar"></i> iCal</a></li>
            <li><a href="diary.rss"><i class="fa fa-rss"></i> RSS</a></li>
        </ul>
    </div>

    <div>
        <a class="button small" role="button" id="load_today" href="{{ url('acts_camdram_diary') }}">This week</a>
        <button class="small" id="load_previous">Previous week</button>
    </div>

    <form action="{{ url('acts_camdram_diary') }}" method="get" id="diary_jump_form">


        Jump to&nbsp;
        <select id="years" name="year">
            {% for year in years %}
                <option value="{{ year }}"{% if current_year == year %} selected{% endif %}>{{ year }}</option>
            {% endfor %}
        </select>

        <select id="periods" name="period">
            {% for period in periods %}
                <option value="{{ period.slug }}"{% if current_period == period %} selected{% endif %}>{{ period.name }}</option>
            {% endfor %}
        </select>

        <button class="button small">Go</button>
    </form>
</div>
