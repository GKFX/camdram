<div class="row news-item">
    <div class="large-12 columns">
        <a href="{{ item.getLink() }}" class="right icon-link" target="_blank">
            <img src="{{ asset('images/service/' ~ item.source ~ '.png') }}" class="news-source"/>
        </a>
        <p>
            {% if item.entity.organisationType == 'venue' %}<a href="{{ path('get_venue', {identifier: item.entity.slug}) }}">
            {% else %}<a href="{{ path('get_society', {identifier: item.entity.slug}) }}">{% endif %}
            <strong>{{ item.entity.name }}</strong></a> 
            
            <em>at {{ item.getPostedAt() | date('H:i \\o\\n jS F') }}</em>
        </p>

        
        {% if item.picture %}
        <div class="row">
            <div class="large-3 small-4 columns">
                <a href="{{ item.getLink() }}" class="right" target="_blank">
                    <img src="{{ item.picture }}"/>
                </a>
            </div>
            <div class="large-9 small-8 columns">
        {% endif %}
        
        <p class="news-body">
            {{ item.body | raw }}
        </p>
    
        {% if item.picture %}
            </div>
        </div>
        {% endif %}

        <hr />
    </div>
</div>

