{
    "name": "camdram/camdram",
    "description": "Camdram - The portal website for student theatre in Cambridge",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "license" : "GPL-2.0",
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.7.*",
        "doctrine/orm": "2.5.*",
        "doctrine/doctrine-bundle": "~1.3",
        "doctrine/doctrine-migrations-bundle": "dev-master",
        "doctrine/doctrine-fixtures-bundle": "dev-master",
        "stof/doctrine-extensions-bundle": "1.1.*",
        "twig/extensions": "~1.0",
        "symfony/assetic-bundle": "~2.3",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~4.0",
        "sensio/framework-extra-bundle": "~3.0",
        "friendsofsymfony/rest-bundle": "1.7.*",
        "jms/serializer-bundle": "1.0.*",
        "friendsofsymfony/oauth-server-bundle": "1.4.*",
        "acts/social-api-bundle": "0.1.*",
        "acts/external-login-bundle": "0.2.*",
        "egeloen/google-map-bundle" : "2.0.*",
        "pagerfanta/pagerfanta": "1.0.*",
        "friendsofsymfony/jsrouting-bundle": "1.5.*",
        "sabre/vobject": "~3.3",
        "hoyes/symfony2-image-manager": "dev-master",
        "camdram/sphinx-realtime-bundle": "0.1.*",
        "incenteev/composer-parameter-handler": "~2.0",

        "acts/time-mock-bundle": "*",
        "zurb/foundation": "4.*",
        "leafo/scssphp": "0.1.*",
        "zendframework/zend-feed": "~2.4",
        "zendframework/zend-mail": "~2.4",
        "zendframework/zend-servicemanager": "~2.4",
        "excelwebzone/recaptcha-bundle" : "2.3.*"
    },
    "require-dev": {
        "sensio/generator-bundle": "~2.3",
        "behat/behat": "2.5.*@stable",
        "behat/mink": "1.6.*@stable",
        "behat/mink-extension": "*",
        "behat/mink-goutte-driver": "*",
        "behat/symfony2-extension": "*"
    },
    "scripts": {
        "post-root-package-install": [
            "SymfonyStandard\\Composer::hookRootPackageInstall"
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles"
        ]
    },
    "minimum-stability": "dev",
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "symfony-assets-install": "relative"
    },
    "config": {
        "bin-dir": "bin/"
    }
}
