<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ActsForumsMessages" table="acts_forums_messages">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="replyid" type="integer" column="replyid" nullable="false"/>
    <field name="forumid" type="integer" column="forumid" nullable="false"/>
    <field name="uid" type="integer" column="uid" nullable="false"/>
    <field name="datetime" type="datetime" column="datetime" nullable="false"/>
    <field name="subject" type="string" column="subject" length="255" nullable="false"/>
    <field name="message" type="text" column="message" nullable="false"/>
    <field name="resourceid" type="integer" column="resourceid" nullable="false"/>
    <field name="ancestorid" type="integer" column="ancestorid" nullable="false"/>
    <field name="lastpost" type="datetime" column="lastpost" nullable="false"/>
  </entity>
</doctrine-mapping>
