{% extends 'ActsCamdramBundle::layout.html.twig' %}

{% block title %}Group - {{ form.vars.value.name }} - Edit{% endblock %}

{% block body %}

<div class="row">
    <h3>Edit Group</h3>
    <form action="{{ path("put_group", {identifier: form.vars.value.shortName, _method: 'put'}) }}" method="post" class="custom">
        {{ form_widget(form) }}
        <div class="text-right">
            <input type="submit" value="Save" class="button"/>
        </div>
    </form>
</div>

{% endblock %}
