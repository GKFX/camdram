{% if roles | length > 0 %}
    <h3>{{ person.name }} is currently preparing for</h3>
    <ul class="large-block-grid-2">
    {% for role in roles %}
        <li class="panel">
            {{ role.role }}<br />
            <h3><a href="{{ url('get_show', {identifier : role.show.slug}) }}">{{ role.show.name }}</a></h3>
            {% include 'ActsCamdramBundle:Performance:show.html.twig' with {'performances': role.show.performances } %}
        </li>
    {% endfor %}
    </ul>
{% endif %}