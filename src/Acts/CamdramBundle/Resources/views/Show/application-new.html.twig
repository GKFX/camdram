{% extends 'ActsCamdramBundle::layout.html.twig' %}

{% set current_navigation_id = 'vacancies' %}
{% block title %}Technical Team Advert - New{% endblock %}

{% block body %}

{% set current_subnav_id = 'new_application' %}
{{ render(controller('ActsCamdramBundle:Show:adminPanel', {show: show})) }}

<div class="row">
    <div class="large-12 columns">
        <h3>Add Director/Producer Advert</h3>

        <div class="panel">
            <p>Use the form below to create an advert for core production team positions for your show, e.g. directors, producers, musical directors
            and choreographers. The advert will be displayed until the deadline date.</p>
            <p>Advertisements for other positions (e.g. musicians) are advised to create either a technical team advert or audition using the link above for now
            (we have plans to overhaul the vacancies system eventually).</p>
        </div>

        <form action="{{ path("post_show_application", {identifier: show.slug}) }}" method="post">
            {{ include('ActsCamdramBundle:Show:application-form.html.twig') }}
            <div class="row">
                <div class="large-6">

                </div>
                <div class="large-6 text-right">
                    <input type="submit" value="Create" class="button"/>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
