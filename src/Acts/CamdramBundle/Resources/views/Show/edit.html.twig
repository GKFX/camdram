{% extends 'ActsCamdramBundle::layout.html.twig' %}

{% block title %}Show - {{ form.vars.value.name }} - Edit{% endblock %}

{% block body %}

<div class="row">
    <h3>Edit Show</h3>
    <form action="{{ path("put_show", {identifier: form.vars.value.slug, _method: 'put'}) }}" id="show_form" method="post">

        {% include 'ActsCamdramBundle:Show:form.html.twig' %}

        <div class="text-right">
            <input type="submit" value="Save" class="button"/>
        </div>
    </form>
</div>

{% endblock %}

{% block javascripts %}
    <script>
        $(function() {
            $('#show_form').initPerformances();
        })
    </script>
{% endblock %}