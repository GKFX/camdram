{% extends 'ActsCamdramBundle::layout.html.twig' %}

{% set current_navigation_id = 'vacancies' %}
{% block title %}Technical Team Advert - New{% endblock %}

{% block body %}

{% set current_subnav_id = 'new_techie_advert' %}
{{ include('@ActsCamdram/Show/admin-panel.html.twig', {show: form.vars.value.show}) }}

<div class="row">
    <div class="large-12 columns">
        <h3>Add Technical Team Advert</h3>

        <div class="panel">
            <p>Use the form below to create an advert for one or more technical positions on your show.</p>
            <p>By default, no deadline will be displayed, but adverts will expire after 10 days (you will receive an email notification in advance).
                If you would like to advertise a specific deadline, please check the box below and enter a date and time.</p>
        </div>

        <form action="{{ path("post_show_techie_advert", {identifier: form.vars.value.show.slug}) }}" method="post">
            {{ include('ActsCamdramBundle:Show:techie-advert-form.html.twig') }}
            <div class="row">
                <div class="large-6">

                </div>
                <div class="large-6 text-right">
                    <input type="submit" value="Create" class="button"/>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
