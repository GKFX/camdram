{% extends 'ActsCamdramBundle::layout.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
<div class="row">
    <div class="twelve columns">

        <h4>Log in to camdram.net</h4>

        {% if error %}
            <div class="error_panel">
                <p>Either the username or password is invalid - please try again</p>
            </div>
        {% endif %}

        {% include 'ActsCamdramSecurityBundle:Default:login_form.html.twig' %}
    </div>
</div>
{% endblock %}